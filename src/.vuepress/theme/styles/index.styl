table
  border-spacing unset
  font-size 16px !important
  line-height 19px !important
  border-radius $cn-border-radius-lg
  box-shadow $cn-shadow-sm

  @media (max-width: $MQMobile)
    font-size 8px !important
    line-height 10px !important
  thead
    tr
      height 60px
      th
        padding-left 20px
        padding-right 20px
        text-align left
        background-color $cn-color-primary_darker
        &:first-of-type
          border-top-left-radius $cn-border-radius-lg
        &:last-of-type
          border-top-right-radius $cn-border-radius-lg
        &:not(:last-of-type)
          border-right 5px solid transparent
          -webkit-background-clip: padding-box;
          background-clip: padding-box;
  tbody
    tr
      height 48px
      td
        padding-left 20px
        padding-right 20px
        text-align left
        background-color $cn-color-primary_dark
        &:not(:last-of-type)
          border-right 5px solid transparent
          -webkit-background-clip: padding-box;
          background-clip: padding-box;
        code
          color $cn-color-secondary
          font-weight bold
      &:not(:last-of-type)
        td
          border-bottom 5px solid transparent
          -webkit-background-clip: padding-box;
          background-clip: padding-box;
      &:last-of-type
        td
          &:first-of-type
            border-bottom-left-radius $cn-border-radius-lg
          &:last-of-type
            border-bottom-right-radius $cn-border-radius-lg

.page-content
    img
      max-width 100%
